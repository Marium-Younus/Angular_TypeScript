@model UpComingRes
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-danger">Upcoming Movies --> The Movie Database (TMDB) API</h1>
        </div>
        @foreach (var movie in Model.Results)
        {
            <div class="col-md-3 mt-5">

                <div class="card">
                    <img src="@ViewBag.imageurl/@movie.backdrop_path" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p>@movie.overview</p>
                        <p><i class="fa-solid fa-video fa-beat"></i>  @movie.release_date</p>

            
                    </div>
                </div>

            </div>
        }
    </div>

</div>